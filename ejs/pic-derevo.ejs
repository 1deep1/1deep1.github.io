                        <select class="calc-mob-sel" name="box" id="sel-box">
                            <option>Классическая</option>
                            <option>В подарок</option>
                        </select>
                    </div>
                    <div class="calc-mob-list">
                        <p>Крепление:</p>
                        <select class="calc-mob-sel" name="huck" id="sel-huck">
