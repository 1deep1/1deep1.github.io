                    <div class="calc-top-btns">
                        <input type="radio" name="ver-hor" value="vertical" id="ver" hidden>
                        <input type="radio" name="ver-hor" value="horizontal" id="hor" hidden>
                        <a onclick="calcBtnActive1()" class="calc-btn">Вертикальная</a>
                        <a onclick="calcBtnActive2()" class="calc-btn">Горизонтальная</a>
                    </div>
                    <select name="size" id="sel-size">
                        <option>30x30 см</option>
                        <option>30х40 см</option>
                        <option>40х50 см</option>
                        <option>40х60 см</option>
                        <option>50х50 см</option>
                        <option>50x60 см</option>
                        <option>50x70 см</option>
                    </select>
                </div>
                <div class="calc-top-item">
                <fieldset class="index-filedset">
                    <legend>Упаковка:</legend>
                    <input type="radio" name="box" value="classic-box" id="classic"><span>Классическая</span>
