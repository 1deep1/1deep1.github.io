                            var BtnActive = document.getElementsByClassName("calc-btn");
                            var BtnRadioVer = document.getElementById("ver");
                            var BtnRadioHor = document.getElementById("hor");

                            BtnActive[0].className = "calc-btn calc-btn-active";
                            BtnActive[1].className = "calc-btn";
                            BtnActive[2].className = "calc-btn calc-btn-active";
                            BtnActive[3].className = "calc-btn";
                            BtnRadioVer.click();

                            function calcBtnActive1() {
                                BtnActive[0].className = "calc-btn calc-btn-active";
                                BtnActive[1].className = "calc-btn";
                                BtnActive[2].className = "calc-btn calc-btn-active";
                                BtnActive[3].className = "calc-btn";

                                BtnRadioVer.click();
